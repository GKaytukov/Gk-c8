    case 'orange': 
    console.log('Oranges are $0.59 a pound.')
    case 'apple': 
    console.log('Apple are $0.32 a pound.')
    case 'banana': 
    console.log('Banana are $0.48 a pound.')
    break: 
    console.log('Sorry, we are out of ${fruit}. ')

}

